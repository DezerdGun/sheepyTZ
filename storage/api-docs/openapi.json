{
    "openapi": "3.0.0",
    "info": {
        "title": "Company Fleet API",
        "description": "API для служебных автомобилей",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8080",
            "description": "Local dev server"
        }
    ],
    "paths": {
        "/api/cars": {
            "get": {
                "tags": [
                    "Cars"
                ],
                "summary": "Получить доступные автомобили",
                "description": "Возвращает список машин, доступных текущему пользователю для поездки",
                "operationId": "4e913ee0b6125f5ad41f32df1df5b8a4",
                "parameters": [
                    {
                        "name": "model",
                        "in": "query",
                        "description": "Фильтр по модели авто",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "category",
                        "in": "query",
                        "description": "Фильтр по категории комфорта",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "start_time",
                        "in": "query",
                        "description": "Запланированное начало поездки (ISO 8601, например 2025-08-21T09:00:00)",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "format": "date-time"
                        }
                    },
                    {
                        "name": "end_time",
                        "in": "query",
                        "description": "Запланированный конец поездки (ISO 8601)",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "format": "date-time"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Список доступных автомобилей",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Car"
                                    }
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/categories": {
            "get": {
                "tags": [
                    "Categories"
                ],
                "summary": "Получить список категорий",
                "operationId": "ac9c4d978ea4e5b72915ca9728e5b8b1",
                "responses": {
                    "200": {
                        "description": "Список категорий",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Category"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Categories"
                ],
                "summary": "Создать категорию",
                "operationId": "cca49a87d9b0ebb9a98ad7c154b71737",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Комфорт"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Категория создана",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Category"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/ping": {
            "get": {
                "tags": [
                    "Health"
                ],
                "summary": "Проверка доступности API",
                "operationId": "e7c73cf4dcf318b3f77f8a6ec64208d0",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "ok"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Car": {
                "title": "Car",
                "required": [
                    "plate_number",
                    "car_model_id"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "plate_number": {
                        "type": "string",
                        "example": "01A123BC"
                    },
                    "car_model_id": {
                        "type": "integer",
                        "example": 2
                    },
                    "driver_id": {
                        "type": "integer",
                        "example": 5,
                        "nullable": true
                    },
                    "car_model": {
                        "$ref": "#/components/schemas/CarModel"
                    },
                    "driver": {
                        "$ref": "#/components/schemas/Driver"
                    }
                },
                "type": "object"
            },
            "CarModel": {
                "title": "CarModel",
                "required": [
                    "name",
                    "category_id"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 2
                    },
                    "name": {
                        "type": "string",
                        "example": "Toyota Camry"
                    },
                    "category_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "comfort_category": {
                        "$ref": "#/components/schemas/Category"
                    }
                },
                "type": "object"
            },
            "Category": {
                "title": "Category",
                "required": [
                    "name"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "Комфорт"
                    }
                },
                "type": "object"
            },
            "Driver": {
                "title": "Driver",
                "required": [
                    "name"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 5
                    },
                    "name": {
                        "type": "string",
                        "example": "Иванов Иван Иванович"
                    },
                    "phone": {
                        "type": "string",
                        "example": "+998901234567"
                    }
                },
                "type": "object"
            }
        }
    },
    "tags": [
        {
            "name": "Health",
            "description": "Запросы для проверки состояния API"
        },
        {
            "name": "Cars",
            "description": "Cars"
        },
        {
            "name": "Categories",
            "description": "Categories"
        }
    ]
}